#include <iostream> // Created with Dev C++

using namespace std;

int main()
{
char arr[50];
int i, j, size;

cout << "Enter Size Of The Array: "; cin >> size;

for (int i = 0; i < size; i++)
{
cout << "Enter Element #" << i + 1 << ": ";
cin >> arr[i];
}

cout << "The Reversed Array Is: ";
for (int j = size; j > 0 - 1; j--) 
{
   cout << arr[j] << " "; 
}  


return 0;
}
