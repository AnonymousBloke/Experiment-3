#include <iostream> // Created with Dev C++

using namespace std;

int main ()
{
double  tempa[7], tempb[7], tempc[7];

for (int i = 0; i < 7; i++)
{
cout << "Enter Temperature of Province A, Day " << i + 1 << ": ";
cin >> tempa[i];
}

for (int i = 0; i < 7; i++)
{
cout << "Enter Temperature of Province B, Day " << i + 1 << ": ";
cin >> tempb[i];
}
for (int i = 0; i < 7; i++)
{
cout << "Enter Temperature of Province C, Day " << i + 1 << ": ";
cin >> tempc[i];
}

cout << endl;
cout << "Temperature of Provinces A, B, and C (In degrees Celsius): " << endl;
for (int i = 0; i < 7; i++)
{
cout << "Province A, Day " << i + 1 << " = " << tempa[i]  << endl;
}

for (int i = 0; i < 7; i++)
{
cout << "Province B, Day " << i + 1 << " = " << tempb[i] << endl;
}

for (int i = 0; i < 7; i++)
{
cout << "Province C, Day " << i + 1 << " = " << tempc[i] << endl;
}

return 0;
}
